local library = loadstring(game:HttpGet("https://raw.githubusercontent.com/memejames/elerium-v2-ui-library/main/Library", true))()

local window = library:AddWindow("TGX PAID SCRIPT", {
    main_color = Color3.fromRGB(0, 0, 0), -- Color
    min_size = Vector2.new(470, 470), -- Size of the GUI
    can_resize = false,
})

-- Main Tab
local Main = window:AddTab("Locate")
local folder1 = Main:AddFolder("Items")

folder1:AddSwitch("Locate Shrooms", function(state)
    shrooms = state
    if state then
        -- Educational ESP Script for Roblox Studio
-- Only use in private/local Roblox Studio for learning purposes

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

local function createESP(targetPart, color)
    -- Safety check
    if not targetPart or not targetPart:IsA("BasePart") then
        warn("Target part not found or not a valid part")
        return nil
    end
    
    -- Create the ESP components
    local espContainer = Instance.new("Folder")
    espContainer.Name = "ESPFolder_" .. targetPart.Name
    
    -- Billboard GUI for text
    local billboard = Instance.new("BillboardGui")
    billboard.Name = "ESPBillboard"
    billboard.AlwaysOnTop = true
    billboard.Size = UDim2.new(0, 200, 0, 50)
    billboard.StudsOffset = Vector3.new(0, 2, 0)
    billboard.Adornee = targetPart
    billboard.Parent = espContainer
    
    local textLabel = Instance.new("TextLabel")
    textLabel.Name = "ESPLabel"
    textLabel.Size = UDim2.new(1, 0, 1, 0)
    textLabel.BackgroundTransparency = 1
    textLabel.Text = "shroom"
    textLabel.TextColor3 = color
    textLabel.TextStrokeTransparency = 0.5
    textLabel.TextSize = 14
    textLabel.Font = Enum.Font.SourceSansBold
    textLabel.Parent = billboard
    
    -- Highlight effect
    local highlight = Instance.new("Highlight")
    highlight.Name = "ESPHighlight"
    highlight.Adornee = targetPart
    highlight.FillColor = color
    highlight.FillTransparency = 0.8
    highlight.OutlineColor = color
    highlight.OutlineTransparency = 0
    highlight.Parent = espContainer
    
    -- Wireframe box (alternative visualization)
    local boxHandle = Instance.new("BoxHandleAdornment")
    boxHandle.Name = "ESPBox"
    boxHandle.Adornee = targetPart
    boxHandle.AlwaysOnTop = true
    boxHandle.Size = targetPart.Size + Vector3.new(0.1, 0.1, 0.1)
    boxHandle.Color3 = color
    boxHandle.Transparency = 0.7
    boxHandle.ZIndex = 1
    boxHandle.Parent = espContainer
    
    -- Line to center of screen (optional)
    local line = Instance.new("LineHandleAdornment")
    line.Name = "ESPLine"
    line.Adornee = targetPart
    line.AlwaysOnTop = true
    line.Thickness = 2
    line.Color3 = color
    line.Transparency = 0.5
    line.Parent = espContainer
    
    -- Update line position each frame
    local connection
    connection = RunService.Heartbeat:Connect(function()
        if not targetPart or not targetPart.Parent then
            connection:Disconnect()
            espContainer:Destroy()
            return
        end
        
        -- Update line from part to a fixed position (e.g., top of screen)
        local camera = workspace.CurrentCamera
        if camera then
            local partPos = targetPart.Position
            local lineEnd = camera.CFrame.Position + camera.CFrame.LookVector * 10
            line.Length = (partPos - lineEnd).Magnitude
            line.CFrame = CFrame.new(partPos, lineEnd)
        end
    end)
    
    espContainer.Parent = targetPart
    return espContainer
end

-- Main function to find and apply ESP to "shroom" part
local function setupESP()
    -- Wait for game to load
    wait(1)
    
    -- Find the part named "shroom" in workspace
    local targetPart = workspace:FindFirstChild("shroom")
    
    if targetPart then
        print("Found shroom part, creating ESP...")
        local esp = createESP(targetPart, Color3.new(0, 1, 0)) -- Green color
        
        if esp then
            print("ESP created successfully for educational purposes")
            
            -- Cleanup function
            esp.Destroying:Connect(function()
                print("ESP cleaned up")
            end)
        end
    else
        warn("Part named 'shroom' not found in workspace")
        
        -- Alternative: Search recursively
        local foundPart
        for _, obj in pairs(workspace:GetDescendants()) do
            if obj.Name == "shroom" and obj:IsA("BasePart") then
                foundPart = obj
                break
            end
        end
        
        if foundPart then
            print("Found shroom part recursively, creating ESP...")
            createESP(foundPart, Color3.new(0, 1, 0))
        else
            warn("Could not find any part named 'shroom'")
        end
    end
end

-- Toggle function for educational demonstration
local function toggleESP(on)
    local targetPart = workspace:FindFirstChild("shroom") or 
                      workspace:FindFirstChild("shroom", true)
    
    if targetPart then
        local espFolder = targetPart:FindFirstChild("ESPFolder_shroom")
        
        if on and not espFolder then
            createESP(targetPart, Color3.new(1, 0, 0)) -- Red when toggled on
            print("ESP toggled ON for educational purposes")
        elseif not on and espFolder then
            espFolder:Destroy()
            print("ESP toggled OFF")
        end
    end
end

-- Initialize (comment out if you want manual control)
setupESP()

-- For manual testing in Studio, you can call:
-- toggleESP(true)  -- Turn ESP on
-- toggleESP(false) -- Turn ESP off

return {
    setupESP = setupESP,
    toggleESP = toggleESP,
    createESP = createESP
}
